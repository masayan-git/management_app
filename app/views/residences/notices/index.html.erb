          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark"><%= notice.title%></strong>
          </p>
        <%# </div> %>
      <% end %>
    <%end%>
  </div>
</main>



